---
const services = [
  { src: "/services/car_pic1.jpg", title: "Engine services" },
  { src: "/services/car_pic2.jpg", title: "Air conditioning" },
  { src: "/services/car_pic3.jpg", title: "Engine services" },
  { src: "/services/car_pic4.jpg", title: "Engine management" },
  { src: "/services/car_pic5.jpg", title: "Steering" },
  { src: "/services/car_pic6.jpg", title: "Wheel" },
];
---

<section class="services">
  <div class="inner">
    <h2>Our Services</h2>
    <p class="lead">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>

    <div class="grid" id="serviceGrid">
      {
        services.map((service) => (
          <div class="card">
            <img src={service.src} alt={service.title} loading="lazy" />
            <div class="overlay">{service.title}</div>
          </div>
        ))
      }
    </div>

    <button class="toggle" id="serviceToggle" type="button">View more</button>
  </div>
</section>

<script>
  const grid = document.getElementById("serviceGrid");
  const toggle = document.getElementById("serviceToggle");

  if (grid && toggle) {
    const updateLabel = () => {
      const expanded = grid.classList.contains("expanded");
      toggle.textContent = expanded ? "View less" : "View more";
    };

    toggle.addEventListener("click", () => {
      grid.classList.toggle("expanded");
      updateLabel();
    });

    updateLabel();
  }
</script>

<style>
  .services {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 6rem 1rem 3.5rem;
    background: #f5f5f5;
  }

  .inner {
    width: min(880px, 94%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    text-align: center;
  }

  h2 {
    margin: 1rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f1f1f;
  }

  .lead {
    margin: 0 0 2rem;
    color: #5a5a5a;
    font-size: 0.95rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.85rem;
    width: 100%;
  }

  .card {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    aspect-ratio: 4 / 3;
    min-height: 180px;
  }

  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .overlay {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0.65rem 0.8rem;
    color: #fff;
    font-size: 0.95rem;
    font-weight: 600;
    text-align: left;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.65) 100%
    );
  }

  .toggle {
    display: none;
    margin-top: 1rem;
    padding: 0.6rem 1.25rem;
    border: 1px solid #cfcfcf;
    background: #f4f4f4;
    border-radius: 5px;
    font-weight: 500;
    cursor: pointer;
    color: #3d3d3d;
  }

  @media (max-width: 900px) {
    .inner {
      width: min(820px, 94%);
    }

    .grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 0.85rem;
    }
  }

  @media (max-width: 640px) {
    .services {
      padding: 2rem 1.1rem 3rem;
    }

    .inner {
      align-items: center;
      text-align: center;
      gap: 0.75rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    .lead {
      font-size: 0.9rem;
      margin-bottom: 0.25rem;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.75rem;
      width: 100%;
    }

    .grid:not(.expanded) .card:nth-child(n + 4) {
      display: none;
    }

    .card {
      min-height: 170px;
      border-radius: 6px;
    }

    .toggle {
      display: block;
      width: 100%;
      max-width: 220px;
      align-self: center;
      margin-top: 0.75rem;
    }
  }
</style>
