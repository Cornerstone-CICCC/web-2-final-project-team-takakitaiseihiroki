---
const logos = [
  { src: "/services/car_logo1.png", alt: "Car brand logo 1" },
  { src: "/services/car_logo2.png", alt: "Car brand logo 2" },
  { src: "/services/car_logo3.png", alt: "Car brand logo 3" },
  { src: "/services/car_logo4.png", alt: "Car brand logo 4" },
  { src: "/services/car_logo5.png", alt: "Car brand logo 5" },
  { src: "/services/car_logo6.png", alt: "Car brand logo 6" },
  { src: "/services/car_logo7.png", alt: "Car brand logo 7" },
  { src: "/services/car_logo8.png", alt: "Car brand logo 8" },
  { src: "/services/car_logo9.png", alt: "Car brand logo 9" },
  { src: "/services/car_logo10.png", alt: "Car brand logo 10" },
  { src: "/services/car_logo11.png", alt: "Car brand logo 11" },
];
---

<section class="logo-block">
  <div class="logo-inner">
    <p class="eyebrow">We work on</p>
    <h2>All Makes & Models</h2>

    <div class="logo-row" id="logoGrid">
      {
        logos.map((logo) => (
          <img class="logo" src={logo.src} alt={logo.alt} loading="lazy" />
        ))
      }
    </div>

    <button class="toggle" id="logoToggle" type="button">View more</button>
  </div>
</section>

<script>
  const grid = document.getElementById("logoGrid");
  const toggle = document.getElementById("logoToggle");

  if (grid && toggle) {
    const updateLabel = () => {
      const expanded = grid.classList.contains("expanded");
      toggle.textContent = expanded ? "View less" : "View more";
    };

    toggle.addEventListener("click", () => {
      grid.classList.toggle("expanded");
      updateLabel();
    });

    updateLabel();
  }
</script>

<style>
  .logo-block {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .logo-inner {
    background: #fff;
    width: 100%;
    padding: 2.75rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
    text-align: center;
  }

  .eyebrow {
    font-size: 0.95rem;
    color: #5c5c5c;
    margin: 0;
  }

  h2 {
    margin: 0 0 1.2rem;
    font-size: 1.65rem;
    font-weight: 700;
  }

  .logo-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem 2rem;
    width: 80%;
  }

  .logo {
    max-height: 60px;
    width: auto;
  }

  .toggle {
    display: none;
    margin-top: 1.2rem;
    padding: 0.55rem 1.25rem;
    border: 1px solid #cfcfcf;
    background: #f4f4f4;
    border-radius: 5px;
    font-weight: 500;
    cursor: pointer;
    color: #3d3d3d;
  }

  @media (max-width: 640px) {
    .logo-block {
      padding: 1.5rem 1.1rem 2.5rem;
    }

    .logo-inner {
      padding: 2rem 1.2rem;
      gap: 0.5rem;
    }

    h2 {
      font-size: 1.28rem;
      margin-bottom: 1rem;
    }

    .logo-row {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1rem;
      justify-items: center;
      width: 100%;
    }

    .logo-row:not(.expanded) .logo:nth-child(n + 5) {
      display: none;
    }

    .logo {
      max-height: 28px;
    }

    .toggle {
      display: block;
      width: 100%;
      max-width: 220px;
    }
  }
</style>
