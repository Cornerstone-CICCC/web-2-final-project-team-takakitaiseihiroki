<style>
    .faq-container {
        font-family: "Roboto", system-ui, sans-serif;
    }

    .faq {
        display: flex;
        flex-direction: column;
        justfiy-content: center;
        align-items: center;
        margin-top: 3rem;
        margin-bottom: 4rem;
    }

    .title {
        text-align: center;
        max-width: 60%;
    }

    .title h1 {
        font-weight: 700;
        font-size: 3rem;
    }

    .questions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 4rem;
    }

    .qa-box {
        display: flex;
        justify-content: space-between;
        border: 1px solid black;
        padding: 0.5rem 1rem;
        align-items: center;
        
    }

    .qa-box p {
        font-weight: 500;
    }
    
    .followup {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        align-items: center;
        margin-top: 4rem;
    }

    .followup h3 {
        font-size: 2rem;
        margin: 0;
    }

    .followup p {
        margin: 0;
    }

    .followup a {
        text-decoration: none;
        color: black;
        border: 1px solid black;
        padding: 0.8rem;
        border-radius: 4px;
        width: 10%;
    }

    @media (max-width: 600px) {
        
        .title p {
            text-align: left;
        }

        .title {
            text-align: left;
        }

        .followup a {
        width: 100%;
        text-align: center;
    }
    }

</style>